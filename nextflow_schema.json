{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/osadio95/amrtrinity/master/nextflow_schema.json",
    "title": "AMR Trinity Workflow",
    "description": "Antimicrobial Resistance analysis with AMRFinderPlus, ResFinder and RGI",
    "type": "object",
    "definitions": {
        "input": {
            "title": "Input Options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data",
            "required": ["input"],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/csv",
                    "description": "TSV file with columns: id, species, assembly",
                    "help_text": "Path to a TSV file containing sample information",
                    "fa_icon": "fas fa-file-csv",
                    "default": "./samplesheet.tsv"
                }
            }
        },
        "outdir": {
            "title": "Output Options",
            "type": "object",
            "properties": {
                "outdir": {
                    "type": "string",
                    "default": "outdir",
                    "description": "Directory for output files",
                    "format": "directory-path"
                }
            }
        }
    },
    "allOf": [
        {"$ref": "#/definitions/input"},
        {"$ref": "#/definitions/outdir"}
    ]
}
