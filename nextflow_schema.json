{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/Osadio95/amrtrinity/main/nextflow_schema.json",
    "title": "AMR Trinity Workflow",
    "description": "Antimicrobial Resistance analysis with AMRFinderPlus, ResFinder and RGI",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/Output Options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data",
            "required": ["input"],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/tab-separated-values",
                    "pattern": "^\\S+\\.tsv$",
                    "description": "Path to comma-separated file containing information about the samples",
                    "help_text": "TSV file with columns: id, species, assembly. Use this parameter to specify the location of your input sample file.",
                    "fa_icon": "fas fa-file-csv",
                    "default": "./test/mini/isolates.tsv"
                },
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved",
                    "fa_icon": "fas fa-folder-open",
                    "default": "./results"
                }
            }
        },
        "computational_resources": {
            "title": "Computational Resources",
            "type": "object",
            "fa_icon": "fas fa-server",
            "description": "Options for computational resources",
            "properties": {
                "threads": {
                    "type": "integer",
                    "description": "Number of threads to use for parallel processes",
                    "fa_icon": "fas fa-microchip",
                    "default": 4,
                    "minimum": 1,
                    "maximum": 128
                }
            }
        },
        "institutional_config_options": {
            "title": "Institutional config options",
            "type": "object",
            "fa_icon": "fas fa-university",
            "description": "Parameters used to describe centralised config profiles",
            "help_text": "These parameters are used to configure institutional-specific profiles.",
            "properties": {
                "config_profile_name": {
                    "type": "string",
                    "description": "Institutional config name",
                    "fa_icon": "fas fa-users-cog",
                    "hidden": true
                },
                "config_profile_description": {
                    "type": "string",
                    "description": "Institutional config description",
                    "fa_icon": "fas fa-users-cog",
                    "hidden": true
                }
            }
        },
        "generic_options": {
            "title": "Generic options",
            "type": "object",
            "fa_icon": "fas fa-file-import",
            "description": "Less common options for the pipeline",
            "help_text": "These options are common to all nf-core pipelines.",
            "properties": {
                "help": {
                    "type": "boolean",
                    "description": "Display help text",
                    "fa_icon": "fas fa-question-circle",
                    "hidden": true
                },
                "version": {
                    "type": "boolean",
                    "description": "Display version and exit",
                    "fa_icon": "fas fa-question-circle",
                    "hidden": true
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/computational_resources"
        },
        {
            "$ref": "#/definitions/institutional_config_options"
        },
        {
            "$ref": "#/definitions/generic_options"
        }
    ]
}
